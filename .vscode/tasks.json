{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++:build",
			"windows": {
				"command": "g++.exe",
				"args": [
					"-g",
					"${file}",
					"-o",
					"${fileDirname}\\${fileBasenameNoExtension}.exe"
				],
				"presentation": {
					"reveal": "never",
					"clear": true
				}
			},
			"linux": {
				"command": "/usr/bin/g++",
				"args": [
					"-g",
					"${file}",
					"-o",
					"${fileDirname}\\${fileBasenameNoExtension}"
				],
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}